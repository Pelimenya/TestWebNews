@model List<WebNewsTest.Models.NewsItem>

<h2>Список новостей</h2>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <h3>@item.Title</h3>
            <p>@item.Content</p>
            <p>@item.CreatedAt</p>
        </li>
    }
</ul>
<a asp-controller="News" asp-action="Add">Добавить новость</a>